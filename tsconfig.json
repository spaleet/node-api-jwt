{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "rootDir": "./src",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "paths": {
        "@app*": ["./src/*"],

        "@utils": ["./src/utils/_index.ts"],
      },
    },
    "include": ["./src/**/*"]
  }