{
    "compilerOptions": {
      "sourceMap": true,
      "target": "es6",
      "module": "commonjs",
      "rootDir": "./src",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "paths": {
        "@app/*": ["./src/*"],

        "@utils": ["./src/utils/_index.ts"],
        "@middleware": ["./src/middleware/_index.ts"],

        "@models": ["./src/models/_index.ts"],
        "@schemas": ["./src/schemas/_index.ts"],
        "@services/*": ["./src/services/*"],
        "@controllers/*": ["./src/controllers/*"],
        "@routes": ["./src/routes/_index.ts"],
      },
    },
    "include": ["./src/**/*"]
  }